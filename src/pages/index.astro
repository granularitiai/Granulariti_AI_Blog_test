---
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';

const posts = [
  {
    title: "The Rise of Large Language Models",
    description: "Exploring the evolution and impact of large language models like GPT-4, their capabilities, and what the future holds for natural language processing.",
    publishDate: new Date('2024-04-15'),
    url: "/blog/rise-of-llms"
  },
  {
    title: "AI in Healthcare: 2024 Breakthroughs",
    description: "How artificial intelligence is revolutionizing medical diagnosis, drug discovery, and patient care through innovative applications.",
    publishDate: new Date('2024-04-10'),
    url: "/blog/ai-in-healthcare-2024"
  },
  {
    title: "Machine Learning for Climate Change",
    description: "Discovering how ML models are being used to predict climate patterns, optimize renewable energy, and fight global warming.",
    publishDate: new Date('2024-04-05'),
    url: "/blog/ml-climate-change"
  }
];
---

<Layout title="AI Insights - Latest in Artificial Intelligence">
  <section class="space-y-12">
    <div class="text-center space-y-6 relative">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/30 to-cyan-500/30 blur-3xl -z-10"></div>
      <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-400 via-cyan-400 to-purple-400 bg-clip-text text-transparent animate-gradient">
        AI & ML Insights
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Exploring the latest breakthroughs in Artificial Intelligence and Machine Learning
      </p>
    </div>

    <div class="grid gap-8 mt-16">
      {posts.map(post => (
        <BlogPost {...post} />
      ))}
    </div>
  </section>
</Layout>