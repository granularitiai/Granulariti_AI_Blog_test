---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  url: string;
}

const { title, description, publishDate, url } = Astro.props;
---

<article class="group relative">
  <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-cyan-500/10 rounded-xl blur-xl transition-all duration-500 group-hover:blur-2xl opacity-0 group-hover:opacity-100"></div>
  <div class="relative backdrop-blur-xl bg-white/5 border border-white/10 rounded-xl p-6 transition-all duration-300 hover:border-white/20">
    <div class="text-sm text-gray-400">
      {publishDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </div>
    <h2 class="text-xl font-semibold mt-2 bg-gradient-to-r from-white via-purple-100 to-white bg-clip-text text-transparent">
      <a href={url} class="hover:text-purple-300 transition-colors">
        {title}
      </a>
    </h2>
    <p class="text-gray-300 mt-3 line-clamp-3">
      {description}
    </p>
    <a href={url} class="inline-flex items-center gap-1 mt-4 text-cyan-400 hover:text-cyan-300 transition-colors group-hover:translate-x-1 duration-300">
      Read more
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</article>